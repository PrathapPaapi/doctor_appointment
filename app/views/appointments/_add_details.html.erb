<div class="add-details container" style="width: 430px; justify-content: center; margin-top: 15vh;">
  <h2 style="text-align: center; font-weight: 600;">Add Details</h2>
  <div class="form-group mt-lg-5">
    <h5><label for="email">Email</label></h5>
    <div class="input-group input-group-lg">
      <input type="text" class="form-control border-2 border-secondary border-opacity-50" style="height: 70px; background-color: rgb(245, 242, 252)"  aria-label="Sizing example input" aria-describedby="inputGroup-sizing-lg" id="email" placeholder="Enter Email">
    </div>
  </div>
  <div class="form-group mt-lg-5">
    <h5><label for="currency">Select Currency</label></h5>
    <div class="d-flex mt-4">
      <%= button_to 'INR', "", method: "get", class: "btn btn-light btn-lg border border-secondary border-opacity-25 me-2 ", style: "width: 130px;" %>
      <%= button_to 'USD', "", method: "get", class: "btn btn-light btn-lg border border-secondary border-opacity-25 me-2", style: "width: 130px" %>
      <%= button_to 'EUR', "", method: "get", class: "btn btn-light btn-lg border border-secondary border-opacity-25 ", style: "width: 130px" %>
    </div>
  </div>
  <%= button_to 'Pay 500', "", method: "get", class: "pay-button btn btn-primary btn-lg rounded-2 w-100 mt-5" %>

</div>
